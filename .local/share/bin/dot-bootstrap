#!/bin/bash

set -euo pipefail

GITDIR="$HOME/.local/share/dotfiles"

git clone --bare "git@github.com:forsen/dotfiles.git" "$GITDIR"
git --git-dir="$GITDIR" --work-tree="$HOME" \
	config --local status.showUntrackedFiles no
git --git-dir="$GITDIR" --work-tree="$HOME" \
	checkout -- "$HOME"

cd "$HOME/.local/share/bin/"
source dot-setup

